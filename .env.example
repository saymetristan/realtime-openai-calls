# CONFIGURACIÃ“N DEL SISTEMA DE LLAMADAS AI
# ===========================================

# ----------------------------------------
# OpenAI Configuration
# ----------------------------------------
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id-here
OPENAI_PROJECT=proj_your-project-id-here

# ----------------------------------------
# Twilio Configuration
# ----------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_API_KEY=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_SECRET=your-twilio-api-secret-here

# Twilio Phone Numbers
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_SIP_DOMAIN=vadai-realtime.sip.twilio.com

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=3000
NODE_ENV=development
SERVER_URL=https://your-domain.ngrok.io

# For production, replace with your actual domain:
# SERVER_URL=https://yourdomain.com

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/realtime_calls

# For Railway/Supabase, use their connection string:
# DATABASE_URL=postgresql://postgres:password@db.railway.app:5432/railway

# ----------------------------------------
# Redis Configuration (Optional)
# ----------------------------------------
REDIS_URL=redis://localhost:6379
# For Railway Redis:
# REDIS_URL=redis://default:password@redis.railway.app:6379

# ----------------------------------------
# Security & Encryption
# ----------------------------------------
JWT_SECRET=your-super-secret-jwt-key-for-sessions
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-for-express-sessions

# ----------------------------------------
# Webhook Security
# ----------------------------------------
TWILIO_WEBHOOK_SECRET=your-twilio-webhook-validation-secret

# ----------------------------------------
# OpenAI Realtime Configuration
# ----------------------------------------
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
OPENAI_VOICE=alloy
# Available voices: alloy, ash, ballad, coral, echo, sage, shimmer, verse

# Audio Configuration
AUDIO_FORMAT=pcm16
# Available formats: pcm16, g711_ulaw, g711_alaw

# ----------------------------------------
# Application Configuration
# ----------------------------------------
# Maximum concurrent calls
MAX_CONCURRENT_CALLS=50

# Call timeout in minutes
CALL_TIMEOUT_MINUTES=30

# Rate limiting
RATE_LIMIT_CALLS_PER_MINUTE=10
RATE_LIMIT_CALLS_PER_HOUR=100

# ----------------------------------------
# Monitoring & Logging
# ----------------------------------------
LOG_LEVEL=info
# Available levels: error, warn, info, verbose, debug

# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# ----------------------------------------
# Features Flags
# ----------------------------------------
ENABLE_OUTBOUND_CALLS=true
ENABLE_FUNCTION_CALLING=true
ENABLE_HUMAN_TRANSFER=false
ENABLE_CALL_RECORDING=false

# ----------------------------------------
# Business Logic Configuration
# ----------------------------------------
# Default conversation instructions
DEFAULT_INSTRUCTIONS="You are a helpful AI assistant. Speak clearly and be concise."

# Company information for AI responses
COMPANY_NAME="VADAI Agency"
COMPANY_PHONE="+1234567890"
BUSINESS_HOURS="Monday to Friday, 9 AM to 6 PM"

# ----------------------------------------
# Cost Control
# ----------------------------------------
# Maximum cost per call in USD
MAX_COST_PER_CALL=5.00

# Daily budget limit in USD
DAILY_BUDGET_LIMIT=500.00

# Alert threshold for daily costs
COST_ALERT_THRESHOLD=400.00

# ----------------------------------------
# Development & Testing
# ----------------------------------------
# Set to true to enable verbose logging
DEBUG_MODE=true

# Test phone numbers (comma separated)
TEST_PHONE_NUMBERS=+1234567890,+0987654321

# Mock external APIs in development
MOCK_EXTERNAL_APIS=false
